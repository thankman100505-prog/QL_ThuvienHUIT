@model QL_ThuVIenHUIT_13.Models.PHONGHOP
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="container mt-4">
    <div class="col-md-6 mx-auto">
        <h3>✏️ SỬA PHÒNG HỌP</h3>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.MAPHONG)
            <div class="card p-3 shadow border-warning">
                <div class="mb-3">
                    <label class="fw-bold">Vị trí</label>
                    @Html.DropDownListFor(m => m.VITRI, new SelectList(new[] { "Tầng 1", "Tầng 2", "Tầng 3", "Tầng 4" }), new { @class = "form-select" })
                </div>
                <div class="mb-3">
                    <label class="fw-bold">Sức chứa</label>
                    @Html.TextBoxFor(m => m.SL_NGUOITOIDA, new { @class = "form-control", type = "number" })
                </div>
                <div class="mb-3">
                    <label class="fw-bold">Trạng thái</label>
                    @Html.DropDownListFor(m => m.TINHTRANG, new SelectList(new[] { new { V = 1, T = "Sẵn sàng" }, new { V = 0, T = "Bảo trì" } }, "V", "T"), new { @class = "form-select" })
                </div>
                <div class="text-end">
                    <a href="@Url.Action("QLPhongHop")" class="btn btn-secondary">Quay lại</a>
                    <button type="submit" class="btn btn-warning">Cập nhật</button>
                </div>
            </div>
        }
    </div>
</div>