@model QL_ThuVIenHUIT_13.Models.QLNHANVIEN
@{
    ViewBag.Title = "Thêm Nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white fw-bold">
                    <i class="fa fa-user-plus me-2"></i> THÊM NHÂN VIÊN MỚI
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        if (!string.IsNullOrEmpty(ViewBag.Error))
                        {
                            <div class="alert alert-danger">@ViewBag.Error</div>
                        }

                        <div class="mb-3">
                            <label class="form-label fw-bold">Họ và Tên <span class="text-danger">*</span></label>
                            @Html.EditorFor(model => model.TENNV, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.TENNV, "", new { @class = "text-danger" })
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Ngày sinh</label>
                                <input type="date" name="NGSINH" class="form-control" required />
                                @Html.ValidationMessageFor(model => model.NGSINH, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Chức vụ</label>
                                <select name="CHUCVU" class="form-select">
                                    <option value="Thủ thư">Thủ thư</option>
                                    <option value="Quản lý kho">Quản lý kho</option>
                                    <option value="Admin">Quản trị viên</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Số điện thoại <span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.SDIENTHOAI, new { htmlAttributes = new { @class = "form-control", @required = "required", @pattern = "[0-9]{10}" } })
                                @Html.ValidationMessageFor(model => model.SDIENTHOAI, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Email <span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.MAIL, new { htmlAttributes = new { @class = "form-control", @required = "required", @type = "email" } })
                                @Html.ValidationMessageFor(model => model.MAIL, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="alert alert-info small">
                            <i class="fa fa-info-circle"></i> Hệ thống sẽ tự động tạo tài khoản đăng nhập với mật khẩu mặc định là <strong>12345</strong>.
                        </div>

                        <div class="text-end">
                            <a href="@Url.Action("Index")" class="btn btn-secondary me-2">Quay lại</a>
                            <button type="submit" class="btn btn-success fw-bold px-4">Lưu nhân viên</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>