@model List<QL_ThuVIenHUIT_13.Models.PHONGHOP>
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between mb-3">
        <h2 class="text-primary"><i class="bi bi-door-open"></i> QUẢN LÝ PHÒNG HỌP</h2>
        <a href="@Url.Action("ThemPhongHop")" class="btn btn-success">➕ Thêm phòng</a>
    </div>
    <div class="card shadow">
        <div class="card-body">
            <table class="table table-hover text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Mã Phòng</th>
                        <th>Vị Trí</th>
                        <th>Sức Chứa</th>
                        <th>Trạng Thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MAPHONG</td>
                            <td>@item.VITRI</td>
                            <td>@item.SL_NGUOITOIDA</td>
                            <td>
                                <span class="badge @(item.TINHTRANG == 1 ? "bg-success" : "bg-danger")">
                                    @(item.TINHTRANG == 1 ? "Sẵn sàng" : "Bận/Bảo trì")
                                </span>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a href="@Url.Action("SuaPhongHop", new { id = item.MAPHONG })" class="btn btn-outline-warning btn-sm">Sửa</a>
                                    @using (Html.BeginForm("XoaPhongHop", "StaffManager", new { id = item.MAPHONG }, FormMethod.Post, new { @class = "d-inline" }))
                                    {
                                        <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Xóa phòng này?')">Xóa</button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>