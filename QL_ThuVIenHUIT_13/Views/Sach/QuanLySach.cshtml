@model List<QL_ThuVIenHUIT_13.Models.QLSACH>

@{
    ViewBag.Title = "Quản Lý Sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-uppercase text-primary">
            <i class="fas fa-tasks me-2"></i>Quản Lý Kho Sách
        </h3>
        <a href="@Url.Action("ThemSach", "Sach")" class="btn btn-success shadow-sm">
            <i class="fas fa-plus-circle me-2"></i>Nhập Sách Mới
        </a>
    </div>

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0">
                    <thead class="bg-light text-dark">
                        <tr class="fw-bold text-uppercase small">
                            <th class="py-3 ps-4">Mã Sách</th>
                            <th>Ảnh Bìa</th>
                            <th>Tên Sách</th>
                            <th>Tác Giả / Thể Loại</th>
                            <th>NXB / Năm</th>
                            <th class="text-center">Số Lượng</th>
                            <th class="text-center">Tình Trạng</th>
                            <th class="text-center" style="min-width: 150px;">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-secondary">@item.MASACH</td>
                                <td>
                                    @{
                                        string imgUrl = (item.BIASACH != null && !string.IsNullOrEmpty(item.BIASACH.URL_ANH))
                                            ? "/Images/" + item.BIASACH.URL_ANH
                                            : "https://via.placeholder.com/150x200?text=No+Img";
                                    }
                                    <img src="@imgUrl" alt="Bìa" class="rounded border"
                                         style="width: 50px; height: 70px; object-fit: cover;" />
                                </td>
                                <td class="fw-bold text-primary" style="max-width: 200px;">
                                    @item.TENSACH
                                </td>
                                <td>
                                    <div class="small fw-bold">@(item.TACGIA != null ? item.TACGIA.TENTG : "N/A")</div>
                                    <div class="small text-muted">@(item.THELOAI != null ? item.THELOAI.TENTHELOAI : "N/A")</div>
                                </td>
                                <td>
                                    <div class="small">@(item.NHAXUATBAN != null ? item.NHAXUATBAN.TENNXB : "N/A")</div>
                                    <div class="small text-muted fw-bold">Năm: @item.NAMXB</div>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-secondary">Tổng: @item.SL</span>
                                </td>
                                <td class="text-center">
                                    @if (item.TINHTRANG > 0)
                                    {
                                        <span class="badge bg-success">Còn @item.TINHTRANG</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Hết Sách</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="@Url.Action("CapNhat", "Sach", new { maSach = item.MASACH })"
                                           class="btn btn-outline-warning text-dark" title="Sửa thông tin">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        <button type="button" class="btn btn-outline-danger"
                                                onclick="confirmDelete('@item.MASACH', '@item.TENSACH')">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm("XoaSach", "Sach", FormMethod.Post, new { id = "deleteForm" }))
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="maSach" id="deleteId" />
}

<script>
    function confirmDelete(id, name) {
        if (confirm("CẢNH BÁO: Bạn có chắc chắn muốn xóa sách:\n'" + name + "' không?\n\nHành động này không thể hoàn tác!")) {
            document.getElementById('deleteId').value = id;
            document.getElementById('deleteForm').submit();
        }
    }
</script>