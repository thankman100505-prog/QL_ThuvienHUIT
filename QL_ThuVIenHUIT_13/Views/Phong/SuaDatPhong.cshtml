@model QL_ThuVIenHUIT_13.Models.PHIEU_MUONPHONG

@{
    ViewBag.Title = "Sửa đặt phòng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sửa đặt phòng</h2>

@if (ViewBag.Loi != null)
{
    <p style="color:red">@ViewBag.Loi</p>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.MAPHIEU)

    <label>Ngày</label>
    @Html.TextBoxFor(m => m.NGAYMUON, "{0:yyyy-MM-dd}", new { type = "date" })

    <label>Giờ mượn</label>
    @Html.TextBoxFor(m => m.GIOMUON, new { type = "time" })

    <label>Giờ trả</label>
    @Html.TextBoxFor(m => m.GIOTRA, new { type = "time" })

    <label>Số người</label>
    @Html.TextBoxFor(m => m.SL_NGUOITHAMGIA)

    <label>Mục đích</label>
    @Html.TextBoxFor(m => m.MUCDICH)

    <br />
    <br />
    <button type="submit">Lưu</button>
}
