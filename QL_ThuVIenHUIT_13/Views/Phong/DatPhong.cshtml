@model QL_ThuVIenHUIT_13.Models.PHIEU_MUONPHONG
@using QL_ThuVIenHUIT_13.Models

@{
    ViewBag.Title = "Đặt phòng họp";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var dsPhong = ViewBag.DsPhong as List<PHONGHOP>;
}

<h2>Đặt phòng họp</h2>

@using (Html.BeginForm("DatPhong", "Phong", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <label>Mã thẻ thư viện</label>
    @Html.TextBoxFor(m => m.MATHE, new { required = "required" })

    <label>Phòng</label>
    <select name="MAPH" required>
        @foreach (var p in dsPhong)
        {
            <option value="@p.MAPHONG">@p.MAPHONG</option>
        }
    </select>

    <label>Ngày mượn</label>
    @Html.TextBoxFor(m => m.NGAYMUON, "{0:yyyy-MM-dd}", new { type = "date", required = "required" })

    <label>Giờ mượn</label>
    @Html.TextBoxFor(m => m.GIOMUON, new { type = "time", required = "required" })

    <label>Giờ trả</label>
    @Html.TextBoxFor(m => m.GIOTRA, new { type = "time", required = "required" })

    <label>Số người</label>
    @Html.TextBoxFor(m => m.SL_NGUOITHAMGIA, new { type = "number", min = "1", required = "required" })

    <label>Mục đích</label>
    @Html.TextBoxFor(m => m.MUCDICH)

    <br />
    <br />
    <button type="submit">Đặt phòng</button>
}
