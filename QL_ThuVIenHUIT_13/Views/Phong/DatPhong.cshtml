@model QL_ThuVIenHUIT_13.Models.PHIEU_MUONPHONG
@{
    ViewBag.Title = "Đặt phòng họp";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var dsPhong = ViewBag.DsPhong as List<QL_ThuVIenHUIT_13.Models.PHONGHOP>;
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white text-center">
            <h3>ĐĂNG KÝ ĐẶT PHÒNG HỌP</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("DatPhong", "Phong", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group mb-3">
                    <label class="fw-bold">Mã thẻ thư viện</label>
                    @Html.TextBoxFor(m => m.MATHE, new { @class = "form-control", required = "required" })
                </div>

                <div class="form-group mb-3">
                    <label class="fw-bold">Phòng</label>
                    <select name="MAPH" class="form-control" required>
                        <option value="">-- Chọn phòng --</option>
                        @foreach (var p in dsPhong)
                        {
                            <option value="@p.MAPHONG">@p.VITRI (@p.MAPHONG)</option>
                        }
                    </select>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label class="fw-bold">Ngày mượn</label>
                        @Html.TextBoxFor(m => m.NGAYMUON, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required" })
                    </div>
                    <div class="col-md-4">
                        <label class="fw-bold">Giờ mượn</label>
                        @Html.TextBoxFor(m => m.GIOMUON, new { @class = "form-control", type = "time", required = "required" })
                    </div>
                    <div class="col-md-4">
                        <label class="fw-bold">Giờ trả</label>
                        @Html.TextBoxFor(m => m.GIOTRA, new { @class = "form-control", type = "time", required = "required" })
                    </div>
                </div>

                <div class="form-group mb-4">
                    <label class="fw-bold">Số người</label>
                    @Html.TextBoxFor(m => m.SL_NGUOITHAMGIA, new { @class = "form-control", type = "number", min = "1", required = "required" })
                </div>

                <button type="submit" class="btn btn-success w-100 fw-bold">XÁC NHẬN ĐẶT PHÒNG</button>
            }
        </div>
    </div>
</div>