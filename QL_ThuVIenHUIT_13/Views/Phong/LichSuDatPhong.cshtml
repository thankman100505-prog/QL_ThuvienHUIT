@model List<QL_ThuVIenHUIT_13.Models.PHIEU_MUONPHONG>

@{
    ViewBag.Title = "Lịch sử đặt phòng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4"><i class="bi bi-clock-history"></i> LỊCH SỬ ĐẶT PHÒNG</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">Bạn chưa có yêu cầu đặt phòng nào.</div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body">
                <table class="table table-hover align-middle">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>Mã phiếu</th>
                            <th>Mã phòng</th>
                            <th>Ngày mượn</th>
                            <th>Thời gian</th>
                            <th>Số người</th>
                            <th>Mục đích</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td class="fw-bold">@p.MAPHIEU</td>
                                <td>@p.MAPH</td>
                                <td>@(p.NGAYMUON.HasValue ? p.NGAYMUON.Value.ToString("dd/MM/yyyy") : "")</td>
                                <td class="small">
                                    @p.GIOMUON - @p.GIOTRA
                                </td>
                                <td class="text-center">@p.SL_NGUOITHAMGIA</td>
                                <td>@p.MUCDICH</td>
                                <td class="text-center">
                                    @if (p.TINHTRANG == 0)
                                    {
                                        <span class="badge bg-warning text-dark">Chờ duyệt</span>
                                    }
                                    else if (p.TINHTRANG == 1)
                                    {
                                        <span class="badge bg-success">Đã duyệt</span>
                                    }
                                    else if (p.TINHTRANG == 2)
                                    {
                                        <span class="badge bg-danger">Từ chối</span>
                                        if (!string.IsNullOrEmpty(p.GHICHU_NV))
                                        {
                                            <div class="small text-danger mt-1" style="font-size: 0.75rem;">
                                                Lý do: @p.GHICHU_NV
                                            </div>
                                        }
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        @if (p.TINHTRANG == 0)
                                        {
                                            <a href="@Url.Action("SuaDatPhong", "Phong", new { id = p.MAPHIEU })" class="btn btn-outline-primary btn-sm">Sửa</a>
                                            <a href="@Url.Action("XoaDatPhong", "Phong", new { id = p.MAPHIEU })"
                                               class="btn btn-outline-danger btn-sm"
                                               onclick="return confirm('Bạn có chắc muốn hủy yêu cầu này không?');">Hủy</a>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">N/A</span>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>