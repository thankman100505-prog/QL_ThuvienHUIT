@{
    ViewBag.Title = "Đăng nhập hệ thống";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-image: url('/images/login1.png');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card {
            border-radius: 20px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            background-color: rgba(255, 255, 255, 0.85); /* Tăng độ mờ nền chút để dễ đọc chữ */
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            width: 100%;
            max-width: 450px;
        }

        .form-control {
            border-radius: 25px;
            padding: 10px 15px;
        }

        .btn-custom {
            border-radius: 25px;
            padding: 8px 20px;
            font-weight: 500;
            width: 140px;
        }

        .btn-login {
            background-color: #0e56a0;
            color: white;
            border: none;
        }

            .btn-login:hover {
                background-color: #0b4580;
                color: white;
            }

        .btn-forgot {
            background-color: #42ADF9;
            color: white;
            border: none;
            margin-right: 10px;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }

            .btn-forgot:hover {
                background-color: #3395db;
                color: white;
            }

        .error-message {
            color: #dc3545;
            font-size: 0.9rem;
            text-align: center;
            margin-bottom: 10px;
            font-weight: 600;
        }
    </style>
</head>
<body>

    <div class="card p-4">
        <div class="row align-items-center mb-4">
            <div class="col-3 text-center">
                <img src="~/images/logo.jpg" alt="Logo HUIT" style="width: 70px; height: auto;" />
            </div>
            <div class="col-9">
                <p class="m-0 text-uppercase fw-bold" style="font-size: 13px; color: #0e56a0; line-height: 1.4;">
                    Thư viện trường Đại học<br />Công Thương TP. Hồ Chí Minh
                </p>
            </div>
        </div>

        <div class="px-2">
            @using (Html.BeginForm("SigninSubmit", "User", FormMethod.Post))
            {
                if (TempData["Success"] != null)
                {
                    <div class="alert alert-success text-center p-2 mb-3" role="alert">
                        <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
                    </div>
                }
                <div class="mb-3">
                    <input type="text" placeholder="Tên đăng nhập / Mã thẻ" name="Username" class="form-control" required autofocus />
                </div>
                <div class="mb-3">
                    <input type="password" name="Password" placeholder="Mật khẩu" class="form-control" required />
                </div>
                if (Session["Error"] != null)
                {
                    <div class="error-message">
                        @Session["Error"]
                    </div>
                    Session["Error"] = null;
                }

                <div class="mb-3 form-check ms-2">
                    <input type="checkbox" name="Remember_me" value="1" class="form-check-input" id="rememberCheck">
                    <label class="form-check-label" for="rememberCheck" style="font-size: 0.9rem;">
                        Tự động đăng nhập lần sau
                    </label>
                </div>

                <div class="d-flex justify-content-center mt-4 mb-3">
                    <a href="@Url.Action("ForgotPassword","User")" class="btn btn-custom btn-forgot d-flex align-items-center justify-content-center">
                        Quên mật khẩu
                    </a>

                    <button type="submit" class="btn btn-custom btn-login">
                        Đăng nhập
                    </button>
                </div>

                <p class="text-center mt-3" style="font-size: 0.9rem;">
                    Bạn chưa có thẻ thư viện?
                    <a href="@Url.Action("Register", "User")" class="text-decoration-none fw-bold" style="color:#0e56a0;">
                        Đăng ký ngay
                    </a>
                </p>
            }
        </div>
    </div>

</body>
</html>