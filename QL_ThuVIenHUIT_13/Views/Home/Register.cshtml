@model QL_ThuVIenHUIT_13.Models.Registration

@{
    ViewBag.Title = "Đăng ký thẻ thư viện";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 mb-5">
    <h3 class="text-center mb-4">ĐĂNG KÝ MỞ THẺ THƯ VIỆN</h3>

    @using (Html.BeginForm("Register", "Home", FormMethod.Post,
            new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="card mb-4">
            <div class="card-header fw-bold">THÔNG TIN CHUNG</div>
            <div class="card-body row g-3">

                <div class="col-md-6">
                    @Html.LabelFor(m => m.CMND)
                    @Html.TextBoxFor(m => m.CMND, new { @class = "form-control", placeholder = "CMND / CCCD / Thẻ SV" })
                    @Html.ValidationMessageFor(m => m.CMND)
                </div>

        </div>        
        <div class="card mb-4">
            <div class="card-header fw-bold">THÔNG TIN LIÊN HỆ</div>
            <div class="card-body row g-3">

                <div class="col-md-12">
                    @Html.LabelFor(m => m.DiaChi)
                    @Html.TextBoxFor(m => m.DiaChi, new { @class = "form-control" })
                </div>

                <div class="col-md-6">
                    @Html.LabelFor(m => m.DoiTuong)
                    @Html.TextBoxFor(m => m.DoiTuong, new { @class = "form-control", placeholder = "Sinh viên / CBGV / Khác" })
                </div>

                <div class="col-md-6">
                    @Html.LabelFor(m => m.Khoa)
                    @Html.TextBoxFor(m => m.Khoa, new { @class = "form-control" })
                </div>

                <div class="col-md-6">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>

                <div class="col-md-6">
                    @Html.LabelFor(m => m.DienThoai)
                    @Html.TextBoxFor(m => m.DienThoai, new { @class = "form-control" })
                </div>

                <div class="col-md-12">
                    @Html.LabelFor(m => m.GhiChu)
                    @Html.TextAreaFor(m => m.GhiChu, new { @class = "form-control", rows = 3 })
                </div>

            </div>
        </div>
        <div class="card mb-4">
            <div class="card-header fw-bold">THÔNG TIN TÀI KHOẢN</div>
            <div class="card-body row g-3">

                <div class="col-md-6">
                    @Html.LabelFor(m => m.MatKhau, "Mật khẩu")
                    @Html.PasswordFor(m => m.MatKhau, new
               {
                   @class = "form-control",
                   placeholder = "Nhập mật khẩu"
               })
                    @Html.ValidationMessageFor(m => m.MatKhau)
                </div>

                <div class="col-md-6">
                    @Html.LabelFor(m => m.NhapLaiMatKhau, "Nhập lại mật khẩu")
                    @Html.PasswordFor(m => m.NhapLaiMatKhau, new
               {
                   @class = "form-control",
                   placeholder = "Nhập lại mật khẩu"
               })
                    @Html.ValidationMessageFor(m => m.NhapLaiMatKhau)
                </div>

            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary px-5">Đăng ký</button>
            <a href="@Url.Action("SignIn", "Reader")" class="btn btn-secondary ms-2">Hủy</a>
        </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
