<script>
    let currentPage = 1;
    const totalPages = 3;

    function switchPage(pageNum) {
        currentPage = pageNum;

        for (let i = 1; i <= totalPages; i++) {
            document.getElementById('news-page-' + i).style.display = 'none';
            document.getElementById('btn-' + i).classList.remove('active');
        }

        document.getElementById('news-page-' + pageNum).style.display = 'block';
        document.getElementById('btn-' + pageNum).classList.add('active');
    }

    function nextPage() {
        if (currentPage < totalPages) {
            switchPage(currentPage + 1);
        }
    }

    function prevPage() {
        if (currentPage > 1) {
            switchPage(currentPage - 1);
        }
    }
</script>



