        <!DOCTYPE html>
        <html>
        <head>
            <meta charset="utf-8" />
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>Thư viện HUIT - Trang chủ</title>
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
            <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
            <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
            @RenderSection("Styles", required: false)
        </head>
        <body>
            <div class="top-header">
                <div class="container header-flex">
                    <div class="brand-section">
                        <img src="@Url.Content("~/Images/logo.jpg")" alt="Logo" class="logo-img">
                        <div class="site-titles">
                            <h3>TRƯỜNG ĐẠI HỌC CÔNG THƯƠNG TP. HỒ CHÍ MINH</h3>
                            <h2>THƯ VIỆN</h2>
                        </div>
                    </div>
                    <div class="user-login">
                        @if (Session["Username"] != null)
                        {
                            <div class="dropdown ms-3">
                                <a class="btn btn-light dropdown-toggle"
                                   role="button"
                                   href="#"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">

                                    <i class="fas fa-user-circle"></i> @Session["NameDisplay"]
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            Quản lý tài khoản
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider"></li>

                                    <li>
                                        <a class="dropdown-item text-danger" href="@Url.Action("Logout","Reader")">
                                            Đăng xuất
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a href="@Url.Action("SignIn","Reader")"><i class="fas fa-user-circle"></i> Đăng nhập</a>
                        }

                    </div>
                </div>
            </div>

            <nav>
                <div class="container-fluid">
                    <div class="menu">
                        <ul>
                            <li><a href="@Url.Action("Index","Home")">TRANG CHỦ</a></li>
                            <li><a href="#">GIỚI THIỆU <i class="fas fa-caret-down"></i></a></li>
                            <li>
                                <a href="#">DỊCH VỤ <i class="fas fa-caret-down"></i></a>
                                <ul>
                                    <li><a href="@Url.Action("Index", "MuonPhong")">Mượn phòng</a>
                                    <li><a href="#">Mượn sách</a>
                                </ul>
                            </li>
                            <li><a href="#">TÀI NGUYÊN <i class="fas fa-caret-down"></i></a></li>
                            <li>
                                <a href="#">HƯỚNG DẪN <i class="fas fa-caret-down"></i></a>
                                <ul>
                                    <li><a href="@Url.Action("HuongDan_DK_The","Home")">Đăng kí thẻ</a>
                                    <li><a href="@Url.Action("HuongDan_SD_PhongHop","Home")">Mượn phòng</a>
                                </ul>
                            </li>
                            <li><a href="#">VĂN BẢN <i class="fas fa-caret-down"></i></a></li>
                            <li>
                                <a href="@Url.Action("Index","Sach")">SÁCH <i class="fas fa-caret-down"></i></a>
                                @{
                                    string username = Convert.ToString(Session["Username"]);
                                }

                                @if (username != "" && !username.StartsWith("TH"))
                                {
                                    <ul>
                                        <li><a href="@Url.Action("QuanLySach","Sach")">Quản lý sách</a>
                                        <li><a href="@Url.Action("ThemSach","Sach")">Thêm sách</a>
                                    </ul>
                                }

                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="body-content">
                @RenderBody()
            </div>

            <footer>
                <div class="footer-top">
                    <div class="container footer-grid">
                        <div class="footer-info">
                            <h4>TRUNG TÂM THÔNG TIN - THƯ VIỆN ĐẠI HỌC CÔNG THƯƠNG TP.HCM</h4>
                            <p>Địa chỉ liên hệ: 140 Lê Trọng Tấn, Tân Phú, TP. Hồ Chí Minh, Việt Nam</p>
                            <p>Điện thoại: 099999999- 137</p>
                            <p>Email: thuvien@huit.edu.vn</p>
                            <p>Hotline: 0999999999</p>
                            <div class="footer-links-inline">
                                <a href="#">Trang chủ</a> | <a href="#">Góp ý</a> | <a href="#">Liên hệ</a>
                                <br>
                                <a href="#">Phát triển bởi Nhóm 13</a>
                            </div>
                        </div>
                        <div class="footer-stats">
                            <p><strong>2086150</strong> Tổng lượt truy cập</p>
                            <p><strong>25</strong> Số lượt online</p>
                            <p><strong>0</strong> Thành viên online</p>
                            <p><strong>28</strong> Khách online</p>
                            <p><strong>1146</strong> Trong ngày</p>
                            <p><strong>1929</strong> Hôm qua</p>
                            <p><strong>39112</strong> Trong tháng</p>
                        </div>
                    </div>
                </div>
                <div class="footer-bottom">
                    <div class="container">
                        <p>2019 © Thư viện Trường Đại học Công Thương TP.HCM.</p>
                    </div>
                </div>
            </footer>

            @RenderSection("Scripts", required: false)

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        </body>
        </html>