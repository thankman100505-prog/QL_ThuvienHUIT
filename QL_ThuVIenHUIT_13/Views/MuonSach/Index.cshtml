@model List<QL_ThuVIenHUIT_13.Models.QLSACH>
@{
    ViewBag.Title = "Mượn sách tại quầy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row g-4">
        <div class="col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white fw-bold">CHỌN SÁCH MƯỢN</div>
                <div class="card-body">
                    <input type="text" id="txtSearch" class="form-control mb-3" placeholder="Tìm mã/tên sách..." onkeyup="searchBook()">
                    <div style="max-height: 450px; overflow-y: auto;" id="listBooks">
                        @foreach (var s in Model)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-3 border-bottom pb-2">
                                <div><b>@s.TENSACH</b><br /><small class="text-muted">Mã: @s.MASACH | Tồn: @s.TINHTRANG</small></div>
                                <button class="btn btn-sm btn-primary rounded-pill px-3" onclick="addBook('@s.MASACH')">Chọn</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="card shadow-sm border-0 p-4">
                <h5 class="fw-bold border-bottom pb-2 mb-4">THÔNG TIN MƯỢN SÁCH</h5>
                @using (Html.BeginForm("LuuPhieu", "MuonSach", FormMethod.Post))
                {
                    <div class="row g-2 mb-3">
                        <div class="col-9"><input type="text" name="maThe" id="txtMaThe" class="form-control" placeholder="Mã thẻ độc giả..." onchange="checkReader()"></div>
                        <div class="col-3"><button type="button" class="btn btn-outline-primary w-100" onclick="checkReader()">Check</button></div>
                    </div>
                    <div id="readerInfo" class="alert alert-info py-2 small mb-4" style="display:none;"></div>

                    <div id="divSelectedBooks">
                        @Html.Action("GetSelectedBooks")
                    </div>

                    <button type="submit" id="btnLuuPhieu" class="btn btn-success w-100 mt-4 fw-bold py-3" disabled>XÁC NHẬN CHO MƯỢN</button>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
    $(document).ready(function () {
        console.log("jQuery đã load thành công và sẵn sàng!");
        window.checkReader = function() {
            var maThe = $('#txtMaThe').val();
            if (!maThe) { alert("Vui lòng nhập mã thẻ!"); return; }

            $.post('@Url.Action("KiemTraDocGia", "MuonSach")', { maThe: maThe }, function (res) {
                if (res.status) {
                    var colorClass = res.isValid ? 'text-success' : 'text-danger';
                    $('#readerInfo').html(`Độc giả: <b>${res.ten}</b> - Trạng thái: <b class="${colorClass}">${res.trangThai}</b>`).fadeIn();
                    $('#btnLuuPhieu').prop('disabled', !res.isValid);
                } else {
                    $('#readerInfo').html(`<span class="text-danger">${res.message}</span>`).fadeIn();
                    $('#btnLuuPhieu').prop('disabled', true);
                }
            });
        };

        window.addBook = function(id) {
            $.post('@Url.Action("ThemSachAjax", "MuonSach")', { maSach: id }, function (res) {
                if (res.status) {
                    $('#divSelectedBooks').load('@Url.Action("GetSelectedBooks", "MuonSach")');
                } else {
                    alert(res.msg);
                }
            });
        };

        window.removeBook = function(id) {
            $.post('@Url.Action("XoaSachAjax", "MuonSach")', { maSach: id }, function (res) {
                if (res.status) {
                    $('#divSelectedBooks').load('@Url.Action("GetSelectedBooks", "MuonSach")');
                }
            });
        };
    });
    </script>
}